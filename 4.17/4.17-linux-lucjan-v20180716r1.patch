+		return;
+	p->time_slice = timeslice();
+
+	if (unlikely(p->policy == SCHED_RR))
+		return;
+	if (p->policy == SCHED_NORMAL) {
+		p->deadline /= 2;
+		p->deadline += (rq->clock + task_deadline_diff(p)) / 2;
+	} else
+		p->deadline = rq->clock + task_deadline_diff(p);
+
+	update_task_priodl(p);
+}
