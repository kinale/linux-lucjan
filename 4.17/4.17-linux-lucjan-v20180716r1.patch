+		raw_spin_lock_nested(&src_rq->lock, SINGLE_DEPTH_NESTING);
+		update_rq_clock(src_rq);
+		nr_migrated = migrate_pending_tasks(src_rq, cpu);
+		raw_spin_unlock(&src_rq->lock);
+
+		if (nr_migrated)
+			return rq_first_queued_task(cpu_rq(cpu));
+	}
+	return NULL;
