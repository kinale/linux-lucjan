+static void activate_task(struct task_struct *p, struct rq *rq)
+{
+	if (task_contributes_to_load(p))
+		rq->nr_uninterruptible--;
+	enqueue_task(p, rq);
+	p->on_rq = 1;
+	cpufreq_update_this_cpu(rq, 0);
